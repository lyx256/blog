<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.blog.mapper.BackUserMapper">

    <!-- 用户登录 -->
    <select id="login" resultType="com.blog.blog.sys.entity.BackUser" parameterType="com.blog.blog.sys.entity.BackUser">
        select u.id,u.username,u.email from back_user u where username=#{username} and password =#{password}
    </select>


</mapper>